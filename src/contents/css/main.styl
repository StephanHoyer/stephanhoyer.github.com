@import url("http://fonts.googleapis.com/css?family=Snippet|Arvo|Source+Code+Pro:400,600&subset=latin,latin-ext") 

background-color = white
blue-color = #5f8dd3
font-size = 13px
font-headline = 'Arvo', serif
font-code = 'Source Code Pro', monospace
font-text = 'Snippet', sans-serif

sidebar-background = #E6E6E6
sidebar-width = 15em

h1, h2, h3, h4, h5, h6, p, blockquote, body
  margin 0
  padding 0


body
  font-family font-text
  font-size font-size
  display table
  background-color background-color

  p
    line-height 2em

  a
    color blue-color
    text-decoration none

  h1, h2, h3, h4
    font-family font-headline

  pre, code
    font-family font-code

  .main
    display table-row
    .sidebar
      display table-cell
      padding 2em
      width sidebar-width
      background-color sidebar-background
      box-shadow inset -10px 0 30px -10px gray
      h1
        display none
      .fixed-inner
        position fixed
        width sidebar-width
  
    .content
      display table-cell
      background-color white
      max-width 50em
      padding 2em
  .footer
    display table-row

