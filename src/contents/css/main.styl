@import url("http://fonts.googleapis.com/css?family=Snippet|Arvo|Source+Code+Pro:400,600&subset=latin,latin-ext") 

background-color = #E6E6E6
font-size = 13px
font-headline = 'Arvo', serif
font-code = 'Source Code Pro', monospace
font-text = 'Snippet', sans-serif

h1, h2, h3, h4, h5, h6, p, blockquote, body
  margin 0
  padding 0

body
  font-family font-text
  font-size font-size
  display table-row
  background-color background-color

  p
    line-height 2em

  header
    display table-cell
    padding 2em
    width 20em
    .inner
      h1
        display none
      width 16em
      position fixed

  #content
    max-width 50em

  h1, h2, h3, h4
    font-family font-headline

  pre, code
    font-family font-code
